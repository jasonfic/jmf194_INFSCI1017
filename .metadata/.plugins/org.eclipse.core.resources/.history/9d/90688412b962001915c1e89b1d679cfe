<body>
<div id="includedContent"></div>
<br/>
<div id="searchResults">
	<table id="tblSearchResults">
		<tr>
			<th>Song Title</th>
			<th>Length</th>
			<th>File Path</th>
			<th>Release Date</th>
			<th>Record Date</th>
		</tr>
	</table>
</div>
</body>
<script>
	window.onload = function (){
		search();
	}
	function search() {
		var url = "SongListWS?title=''&searchType='all'";
		$.get(url, function(resp){
			showSongs(resp);
		})
	}
	function showSongs(data) {
		var result = "";
		for(var i=0; i < data.length; i++){
			var tr = $("<tr></tr>"); // created empty html table row
			// First data cell
			var td = $("<td></td>"); // created empty html table data
			td.html(data[i].title);
			tr.append(td);
			
			// Second data cell
			// Note that we don't need to redeclare this
			td = $("<td></td>");
			td.html(data[i].length)
			tr.append(td);
			
			// Third data cell
			td = $("<td></td>");
			td.html(data[i].file_path)
			tr.append(td);
			
			td = $("<td></td>");
			td.html(data[i].release_date)
			tr.append(td);
			
			td = $("<td></td>");
			td.html(data[i].record_date)
			tr.append(td);
			
			// Append row to the table
			$("#tblSearchResults").append(tr);
		}
	}
</script>
</html>