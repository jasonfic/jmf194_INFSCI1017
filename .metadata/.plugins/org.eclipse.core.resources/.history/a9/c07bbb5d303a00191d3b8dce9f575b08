import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

public class GenreManager {

	public void CreateGenre(int genreID, String genreName, String description) {
		EntityManagerFactory enFactory =
				Persistence.createEntityManagerFactory("MusicJPAGenre");
		
		EntityManager en = enFactory.createEntityManager();
		
		en.getTransaction().begin();
		Genre g = new Genre();
		
		g.setGenreID(19);
		g.setGenreName("Brand new genre");
		g.setDescription("This genre does not exist in the database");
		
		// Add the Genre object to the ORM object grid
		en.persist(g);
		
		// Commit transaction
		en.getTransaction().commit();
		
		// Close connection to persistence manager
		en.close();
		enFactory.close();
	}
	
	public void updateGenre(int genreID, String genreName, String description) {
		EntityManagerFactory enFactory = Persistence.createEntityManagerFactory("MusicJPAGenre");
		EntityManager en = enFactory.createEntityManager();
		en.getTransaction().begin();
		
		Genre g - en.find(arg0, arg1)
	}
}