import javax.persistence.*;

public class Tester {
	public static void main(String[] args) {
		EntityManagerFactory enFactory =
				Persistence.createEntityManagerFactory("MusicJPAGenre");
		
		EntityManager en = enFactory.createEntityManager();
		
		en.getTransaction().begin();
		Genre g = new Genre();
		
		g.setGenreID(19);
		g.setGenreName("Brand new genre");
		g.setDescription("This genre does not exist in the database");
		
		// Add the Genre object to the ORM object grid
		en.persist(g);
		
		// Commit transaction
		en.getTransaction().commit();
		
		// Close connection to persistence manager
		en.close();
		enFactory.close();
	}
}
